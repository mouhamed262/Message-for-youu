<div class="container">
    <!-- الشاشة الترحيبية -->
    <div class="welcome-screen" id="welcomeScreen">
        <h1>A Message for You</h1>
        <p class="instruction">Type the required letter to enter</p>
        <div class="input-container">
            <input type="text" id="keyInput" placeholder="Type here" maxlength="1">
        </div>
        <div class="error-message" id="errorMessage">Wrong letter, try again</div>
    </div>
    
    <!-- شاشة الهدايا -->
    <div class="gifts-screen hidden" id="giftsScreen">
        <h2 class="gifts-title">Hello Beautiful <span class="heart">💕</span></h2>
        <h3 style="color: #fff; font-size: 1.5em; margin-bottom: 30px; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);">Your Special Gifts</h3>
        
        <div class="gift-box" onclick="openGift('gift1')">
            <div class="gift-title">First Gift</div>
            <div class="gift-content" id="gift1">
                Hello, I made this for you, I miss you <span class="heart">💔</span>
            </div>
        </div>
        
        <div class="gift-box" onclick="openGift('gift2')">
            <div class="gift-title">Second Gift</div>
            <div class="gift-content" id="gift2">
                I used to love you. I love you ❤️
            </div>
        </div>
    </div>
</div>

<script>
    // إضافة القلوب المتطايرة
    function createFloatingHeart() {
        const heart = document.createElement('div');
        heart.className = 'floating-heart';
        heart.innerHTML = '💕';
        heart.style.left = Math.random() * 100 + '%';
        heart.style.animationDuration = (Math.random() * 3 + 3) + 's';
        document.getElementById('floatingHearts').appendChild(heart);
        
        setTimeout(() => {
            heart.remove();
        }, 6000);
    }
    
    // إنشاء قلوب كل ثانيتين
    setInterval(createFloatingHeart, 2000);
    
    // التحكم في الدخول
    const keyInput = document.getElementById('keyInput');
    const welcomeScreen = document.getElementById('welcomeScreen');
    const giftsScreen = document.getElementById('giftsScreen');
    const errorMessage = document.getElementById('errorMessage');
    
    keyInput.addEventListener('input', function(e) {
        const value = e.target.value.toUpperCase();
        if (value === 'R') {
            welcomeScreen.classList.add('hidden');
            giftsScreen.classList.remove('hidden');
            // إضافة المزيد من القلوب عند الدخول
            for(let i = 0; i < 10; i++) {
                setTimeout(createFloatingHeart, i * 200);
            }
        } else if (value && value !== 'R') {
            errorMessage.classList.add('show');
            keyInput.style.borderColor = '#ff4757';
            setTimeout(() => {
                errorMessage.classList.remove('show');
                keyInput.style.borderColor = 'rgba(255, 255, 255, 0.3)';
            }, 2000);
        }
    });
    
    // فتح الهدايا
    function openGift(giftId) {
        const gift = document.getElementById(giftId);
        if (gift.style.display === 'block') {
            gift.style.display = 'none';
        } else {
            gift.style.display = 'block';
            // إضافة تأثير القلوب عند فتح الهدية
            for(let i = 0; i < 5; i++) {
                setTimeout(createFloatingHeart, i * 100);
            }
        }
    }
    
    // تركيز المؤشر على الإدخال
    keyInput.focus();
    
    // إضافة تأثير الكتابة المتحركة
    function typeWriter(element, text, speed = 50) {
        let i = 0;
        element.innerHTML = '';
        function type() {
            if (i < text.length) {
                element.innerHTML += text.charAt(i);
                i++;
                setTimeout(type, speed);
            }
        }
        type();
    }
</script>
